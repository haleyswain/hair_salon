  <h2><%= @stylist.name()%></h2>

  <% if @clients.any?() %>
    <h4><%= @stylist.name()%>'s Clients:</h4>
        <ul>
        <% @clients.each() do |client| %>
          <li><a href="/client_list<%= client.id %>"><%= client.name() %></a></li>
        <% end %>
      </ul>
      <% else %>
    <h4><%= @stylist.name()%> doesn't appear to have any clients. Add some below!</h3>
    <% end %>

    <form action='/stylist/<%= @stylist.id() %>' method ='post'>
     <input id="stylist_id" name="stylist_id" type="hidden" value="<%= @stylist.id() %>">
     <label for='name'>New Client Name:</label>
     <input id='name' name='name' type='text' class='form-control'>

     <button type="submit" class="btn btn-default">Add New</button>
   </form>

   <h4>Remove <%= @stylist.name()%> from this Salon:</h4>

      <form action='/stylist/<%= @stylist.id() %>/delete' method='post'>
         <input name="_method" type="hidden" value="delete">
         <button class='btn btn-default'>Delete this stylist</button>
      </form>
    </br>
    <a href="/">Return to the home page</a>
  </br>
  <a href="/stylist_list">View the list of stylists</a>
</div>
